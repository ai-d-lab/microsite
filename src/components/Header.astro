---
import NavItem from "./NavItem.astro";
import Logo from "./Logo.astro";
---

<header
  class="w-full fixed top-0 transition-all duration-200 backdrop-blur-2xl bg-white/50"
>
  <nav
    id="nav"
    class="flex transition-all flex-wrap flex-auto justify-start min-w-full w-1/2 align-center pb-0 max-w-md mx-auto"
  >
    <Logo />
    <div
      class="flex justify-evenly w-full lg:w-[500px] lg:flex-grow-0 flex-nowrap"
    >
      <NavItem href="/microsite/">Blog</NavItem>
      <!--      <NavItem href="/team">Team</NavItem> -->
      <!--      <NavItem href="/blog/welcome/">About</NavItem> -->
    </div>
    <!-- <input
      type="search"
      placeholder="search"
      class="hidden relative w-28 focus:w-1/2 text-right px-2 text-atlas h-11 font-bold text-xl py-2 transition-all duration-200 backdrop-blur-lg bg-stone-200/60 focus:bg-stone-300/75 !outline-noneflex-auto focus:shadow-md hover:shadow-md"
    /> -->
  </nav>

  <style>
    header {
      z-index: 1;
    }
  </style>
</header>

<script>
  document.documentElement.classList.remove("dark");

  window.addEventListener("scroll", function () {
    var nav = document.getElementById("nav");
    var scrollPosition = window.scrollY;

    if (scrollPosition > 25) {
      nav.classList.add("shadow-md");
      nav.classList.remove("");
    } else {
      nav.classList.remove("shadow-md");
      nav.classList.add("");
    }
  });
</script>
