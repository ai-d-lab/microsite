---
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";
import { SITE_TITLE } from "../consts";
import { date } from "astro/zod";
---

<header
  class="w-full transition-all duration-200 before:absolute before:backdrop-blur-lg before:-z-10 before:-inset-1 before:gradient-mask-b-50 fixed pt-0 bg-gradient-to-b from-white via-white/50 to-white/0 dark:from-black dark:via-black/50"
>
  <Logo />
  <div id="nav"
    class="flex gap-4 max-w-md mx-auto md:max-w-2xl w-full px-2"
  >
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/team">Team</HeaderLink>
    <HeaderLink href="/features/welcome/">About</HeaderLink>
