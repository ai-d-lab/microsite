---
import "@fontsource/akshar";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const props = Astro.props;
const title = props.title ? `${props.title} | ${SITE_TITLE}` : SITE_TITLE;
const description = props.description || SITE_DESCRIPTION;
const image = props.image || "./social.jpg";
---

<!DOCTYPE html>
<html lang="en" class="dark min-w-full overflow-y-scroll">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="min-w-full m-0 p-0 bg-white dark:bg-gray-900">
    <Header />
    <main
      class="max-w-lg my-2 pt-28 mx-auto md:max-w-2xl lg:max-w-4xl p-2 w-full"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
