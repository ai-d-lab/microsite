---
import "@fontsource/akshar";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en" class="dark min-w-full overflow-y-scroll">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="min-w-full m-0 p-0 bg-white dark:bg-gray-900">
    <Header title={SITE_TITLE} />

    <main
      class="max-w-lg my-2 pt-12 mx-auto md:max-w-2xl lg:max-w-4xl p-2 w-full"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
