---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"team">["data"];

/*
name: "Aeneas Stankowski"
joined: "Oct 01 2022"
left: ""
portrait: "/aeneas_stankowski.jpg"
draft: false
*/

const { name, joined, left, portrait, draft } = Astro.props;
---

<BaseLayout>
  <article class="max-w-2xl mx-auto p-2">
    <h1>{name}</h1>
    {
      joined && (
        <h2>
          Joined <FormattedDate date={joined} />
        </h2>
      )
    }
    {
      left && (
        <h2>
          Left <FormattedDate date={left} />
        </h2>
      )
    }
    {draft && <h2>Unpublished</h2>}
    <img src={portrait} alt={name} class="rounded-full w-48 h-48" />
    <slot />
  </article>
</BaseLayout>
